<UserControl x:Class="RazorPad.RazorTemplateEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <TextBox x:Name="TemplateTextBox"
             Text="{Binding Path=TemplateText, UpdateSourceTrigger=Explicit}"
             TextChanged="TemplateTextChanged"
             AcceptsReturn="True" AcceptsTab="true" 
             AllowDrop="True" AutoWordSelection="True">
    </TextBox>

</UserControl>
