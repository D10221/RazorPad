<UI:ModelBuilder x:Class="RazorPad.Extensions.Xml.XmlBuilder.XmlModelBuilder" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Editors="clr-namespace:RazorPad.UI.Editors;assembly=RazorPad.UI"
             xmlns:UI="clr-namespace:RazorPad.UI;assembly=RazorPad.UI"
>

    <Editors:CodeEditor x:Name="ModelEditor"
             Text="{Binding Path=Xml, UpdateSourceTrigger=Explicit}"
             AllowDrop="True"
             EditorLanguage="XML"
             EditorFontSize="{Binding RelativeSource={RelativeSource  FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.FontSize}" 
    />

</UI:ModelBuilder>
