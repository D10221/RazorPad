<Framework:ModelBuilder x:Class="RazorPad.UI.Json.JsonModelBuilder" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Framework="clr-namespace:RazorPad.UI">

        <Framework:DelayedNotifyPropertyChangedTextBox x:Name="ModelEditor"
             Text="{Binding Path=Json, UpdateSourceTrigger=Explicit}"
             AcceptsReturn="True" AcceptsTab="true" 
             AllowDrop="True" AutoWordSelection="True" />

</Framework:ModelBuilder>