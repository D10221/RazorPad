<Framework:ModelBuilder x:Class="RazorPad.UI.Json.JsonModelBuilder" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Editors="clr-namespace:RazorPad.UI.Editors"
             xmlns:Framework="clr-namespace:RazorPad.UI" 
>

        <Editors:CodeEditor x:Name="ModelEditor"
             Text="{Binding Path=Json}"
             AllowDrop="True"
             EditorLanguage="JavaScript"
             EditorFontSize="{Binding RelativeSource={RelativeSource  FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.FontSize}" 
        />

</Framework:ModelBuilder>