<Framework:ModelBuilder x:Class="RazorPad.UI.Json.JsonModelBuilder" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Framework="clr-namespace:RazorPad.UI" xmlns:Editors="clr-namespace:RazorPad.UI.Editors">

        <Editors:CodeEditor x:Name="ModelEditor"
             Text="{Binding Path=Json}"
             AllowDrop="True"
             EditorLanguage="JavaScript"
             FontSize="{Binding Parent.FontSize}" 
        />

</Framework:ModelBuilder>