<UI:ModelBuilder x:Class="RazorPad.UI.ModelBuilders.CSharp.CSharpModelBuilder" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:UI="clr-namespace:RazorPad.UI">

    <UI:DelayedNotifyPropertyChangedTextBox x:Name="ModelEditor" Grid.Row="1"
             Text="{Binding Path=CSharp, UpdateSourceTrigger=Explicit}"
             AcceptsReturn="True" AcceptsTab="true" 
             AllowDrop="True" AutoWordSelection="True" />

</UI:ModelBuilder>
