<UI:ModelBuilder x:Class="RazorPad.UI.ModelBuilders.CSharp.CSharpModelBuilder" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Editors="clr-namespace:RazorPad.UI.Editors"
             xmlns:UI="clr-namespace:RazorPad.UI" 
>

    <Editors:CodeEditor x:Name="ModelEditor"
             Text="{Binding Path=CSharp}"
             AllowDrop="True" 
             EditorLanguage="C#" 
             EditorFontSize="{Binding RelativeSource={RelativeSource  FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.FontSize}" 
    />

</UI:ModelBuilder>
