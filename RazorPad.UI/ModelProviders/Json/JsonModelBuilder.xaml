<Framework:ModelBuilder x:Class="RazorPad.UI.Json.JsonModelBuilder" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Framework="clr-namespace:RazorPad.UI" 
             xmlns:RazorPadExt="clr-namespace:RazorPad.UI.Wpf" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0">JSON Model</Label>

        <RazorPadExt:DelayedNotifyPropertyChangedTextEditor x:Name="ModelEditor" Grid.Row="1"
             AllowDrop="True" SyntaxHighlighting="JavaScript" />

    </Grid>

</Framework:ModelBuilder>
