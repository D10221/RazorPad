<Window x:Class="RazorPad.Views.DocumentLocator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DocumentLocator" Height="80" Width="300">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" x:Name="Location" Text="C:\Temp\RazorPad" />
        <Button Grid.Column="1" IsDefault="True">Open</Button>
        <Button Grid.Column="2" IsCancel="True">Cancel</Button>
    </Grid>
</Window>
