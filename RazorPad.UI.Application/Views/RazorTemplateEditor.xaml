<UserControl x:Class="RazorPad.Views.RazorTemplateEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:CodeEditors="clr-namespace:RazorPad.UI.CodeEditors;assembly=RazorPad.UI">

    <CodeEditors:RazorCodeEditor 
        Document="{Binding Path=Template, Mode=OneTime, Converter={CodeEditors:TextDocumentConverter}}" 
        DelayedTextChanged="OnDelayedTextChanged"
    />

</UserControl>
