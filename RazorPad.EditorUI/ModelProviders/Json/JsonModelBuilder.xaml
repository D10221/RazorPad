<Framework:ModelBuilder x:Class="RazorPad.ModelProviders.Json.JsonModelBuilder" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Framework="clr-namespace:RazorPad.Framework" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0">JSON Model</Label>

        <Framework:DelayedNotifyPropertyChangedTextBox x:Name="ModelEditor" Grid.Row="1"
             Text="{Binding Path=Json, UpdateSourceTrigger=Explicit}"
             AcceptsReturn="True" AcceptsTab="true" 
             AllowDrop="True" AutoWordSelection="True" />

    </Grid>

</Framework:ModelBuilder>
