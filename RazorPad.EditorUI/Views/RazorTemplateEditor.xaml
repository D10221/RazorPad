<UserControl x:Class="RazorPad.Views.RazorTemplateEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Framework="clr-namespace:RazorPad.Framework">

    <Framework:DelayedNotifyPropertyChangedTextBox x:Name="TemplateTextBox"
             Text="{Binding Path=TemplateText, UpdateSourceTrigger=Explicit}"
             AcceptsReturn="True" AcceptsTab="true" 
             AllowDrop="True" AutoWordSelection="True" />

</UserControl>
